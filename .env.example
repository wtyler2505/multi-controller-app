# Multi-Controller App Development Environment Variables
# Copy this file to .env and fill in your actual API keys

# ============================================
# REQUIRED: Core AI Services
# ============================================

# Anthropic API Key (Required for Task Master AI)
# Get your key at: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Perplexity API Key (Required for research features)
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# ============================================
# OPTIONAL: Alternative AI Models
# ============================================

# OpenAI API Key (Optional - for GPT models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google API Key (Optional - for Gemini models)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Mistral API Key (Optional)
# Get your key at: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# X.AI API Key (Optional - for Grok models)
XAI_API_KEY=your_xai_api_key_here

# OpenRouter API Key (Optional - for multiple models)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================
# DEVELOPMENT ENVIRONMENT
# ============================================

# Node Environment
NODE_ENV=development

# Application Port
PORT=3000

# Debug Mode
DEBUG=true

# Log Level (error, warn, info, debug)
LOG_LEVEL=debug

# ============================================
# HARDWARE CONFIGURATION
# ============================================

# Default Serial Port (Windows format)
DEFAULT_SERIAL_PORT=COM3

# Serial Baud Rate
SERIAL_BAUD_RATE=115200

# Network Timeout (milliseconds)
NETWORK_TIMEOUT=5000

# Device Discovery Interval (milliseconds)
DISCOVERY_INTERVAL=10000

# ============================================
# DATABASE CONFIGURATION
# ============================================

# SQLite Database Path
DATABASE_PATH=./data/multi-controller.db

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# SECURITY SETTINGS
# ============================================

# JWT Secret (generate a secure random string)
JWT_SECRET=your_secure_jwt_secret_here_change_in_production

# Session Secret
SESSION_SECRET=your_secure_session_secret_here_change_in_production

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ============================================
# PERFORMANCE BUDGETS
# ============================================

# Maximum startup time (milliseconds)
MAX_STARTUP_TIME=2000

# Maximum idle CPU percentage
MAX_IDLE_CPU=2

# Maximum base memory (MB)
MAX_BASE_MEMORY=150

# Serial write-ack latency (milliseconds)
MAX_SERIAL_LATENCY=50

# Network latency (milliseconds)
MAX_NETWORK_LATENCY=100

# ============================================
# FEATURE FLAGS
# ============================================

# Enable telemetry collection
ENABLE_TELEMETRY=true

# Enable auto-discovery
ENABLE_AUTO_DISCOVERY=true

# Enable hot reload
ENABLE_HOT_RELOAD=true

# Enable debug UI
ENABLE_DEBUG_UI=true

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# GitHub Token (for automated releases)
GITHUB_TOKEN=

# Sentry DSN (for error tracking)
SENTRY_DSN=

# Analytics ID
ANALYTICS_ID=

# ============================================
# PATHS AND DIRECTORIES
# ============================================

# Drivers directory
DRIVERS_PATH=./drivers

# Profiles directory
PROFILES_PATH=./profiles

# Scripts directory
SCRIPTS_PATH=./scripts

# Logs directory
LOGS_PATH=./logs

# Temp directory
TEMP_PATH=./temp